{
  "appId": "com.fintrack.app",
  "appName": "FinTrack",
  "webDir": "dist",
  "android": {
    "buildOptions": {
      "minifyEnabled": true
    }
  },
  "server": {
    "androidScheme": "https",
    "cleartext": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#3b82f6",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false
    }
  }
}
